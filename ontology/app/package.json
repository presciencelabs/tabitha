{
	"name": "app",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"format:check": "prettier --check .",
		"format:write": "prettier --write .",
		"lint": "eslint .",
		"kit:check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"//TODO: doesn't load `platform` properly: test": "test:unit & test:integration",
		"//TODO: doesn't load `platform` properly: test:integration": "playwright test",
		"//TODO: doesn't load `platform` properly: test:unit": "vitest run",
		"build": "vite build",
		"_build:watch": "vite build -w",
		"//TODO: doesn't load `platform` properly: preview": "vite preview",
		"//TODO: doesn't load `platform` properly: precommit": "format:check & lint & kit:check & build test",
